{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Sage-Bionetworks-Workflows/nf-synstage/master/nextflow_schema.json",
    "title": "Sage-Bionetworks-Workflows/nf-synstage pipeline parameters",
    "description": "Nextflow pipeline for staging files from Synapse",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "properties": {
                "input": {
                    "type": "string",
                    "description": "Path to a file (often samplesheets) containing Synapse URIs",
                    "fa_icon": "far fa-file-alt",
                    "mimetype": "text/csv",
                    "pattern": "\\.csv$",
                    "schema": "assets/schema_input.json"
                },
                "outdir": {
                    "type": "string",
                    "description": "Path to the output directory where the results will be saved.",
                    "fa_icon": "fas fa-folder-open"
                },
                "synapse_config": {
                    "type": "string",
                    "fa_icon": "fas fa-key"
                }
            },
            "required": [
                "input"
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        }
    ]
}